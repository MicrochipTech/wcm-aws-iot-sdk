menu "Cryptographic (Crypto) Library"

config USE_CRYPTO_LIB_NEEDED
    bool

config USE_CRYPTO_LIB
	bool "Use Cryptographic Library?"
	default n if !USE_CRYPTO_LIB_NEEDED
	default y if USE_CRYPTO_LIB_NEEDED
	---help---
	  IDH_HTML_Cryptographic__Crypto__Library
	---endhelp---

config USE_CRYPTO_HW
	bool "Use Hardware Acceleration?"
	depends on USE_CRYPTO_LIB && CRYPTO
	default y
	
source "$HARMONY_VERSION_PATH/framework/crypto/config/crypto_cipher.hconfig"
source "$HARMONY_VERSION_PATH/framework/crypto/config/crypto_hash.hconfig"
source "$HARMONY_VERSION_PATH/framework/crypto/config/crypto_compress.hconfig"
source "$HARMONY_VERSION_PATH/framework/crypto/config/crypto_random.hconfig"
 
endmenu

ifblock USE_CRYPTO_LIB
file CRYPTO_H "$HARMONY_VERSION_PATH/framework/crypto/crypto.h" to "$PROJECT_HEADER_FILES/framework/crypto/crypto.h"
file CRYPTO_C "$HARMONY_VERSION_PATH/framework/crypto/src/crypto.c" to "$PROJECT_SOURCE_FILES/framework/crypto/src/crypto.c"
endif

ifblock USE_CRYPTO_LIB && (USE_CRYPTO_HASH || USE_CRYPTO_CIPHERS || USE_CRYPTO_COMPRESS)

file CODING_H "$HARMONY_VERSION_PATH/framework/crypto/src/coding.h" to "$PROJECT_HEADER_FILES/framework/crypto/src/coding.h"
file CODING_C "$HARMONY_VERSION_PATH/framework/crypto/src/coding.c" to "$PROJECT_SOURCE_FILES/framework/crypto/src/coding.c"

file ERROR_H "$HARMONY_VERSION_PATH/framework/crypto/src/error.h" to "$PROJECT_HEADER_FILES/framework/crypto/src/error.h"
file ERROR_C "$HARMONY_VERSION_PATH/framework/crypto/src/error.c" to "$PROJECT_SOURCE_FILES/framework/crypto/src/error.c"

file INTEGER_H "$HARMONY_VERSION_PATH/framework/crypto/src/integer.h" to "$PROJECT_HEADER_FILES/framework/crypto/src/integer.h"
file INTEGER_C "$HARMONY_VERSION_PATH/framework/crypto/src/integer.c" to "$PROJECT_SOURCE_FILES/framework/crypto/src/integer.c"

file INTERNAL_H "$HARMONY_VERSION_PATH/framework/crypto/src/internal.h" to "$PROJECT_HEADER_FILES/framework/crypto/src/internal.h"

file LOGGING_H "$HARMONY_VERSION_PATH/framework/crypto/src/logging.h" to "$PROJECT_HEADER_FILES/framework/crypto/src/logging.h"
file LOGGING_C "$HARMONY_VERSION_PATH/framework/crypto/src/logging.c" to "$PROJECT_SOURCE_FILES/framework/crypto/src/logging.c"

file MEMORY_H "$HARMONY_VERSION_PATH/framework/crypto/src/memory.h" to "$PROJECT_HEADER_FILES/framework/crypto/src/memory.h"
file MEMORY_C "$HARMONY_VERSION_PATH/framework/crypto/src/memory.c" to "$PROJECT_SOURCE_FILES/framework/crypto/src/memory.c"

file MISC_H "$HARMONY_VERSION_PATH/framework/crypto/src/misc.h" to "$PROJECT_HEADER_FILES/framework/crypto/src/misc.h"
file MISC_C "$HARMONY_VERSION_PATH/framework/crypto/src/misc.c" to "$PROJECT_SOURCE_FILES/framework/crypto/src/misc.c"

file PORT_H "$HARMONY_VERSION_PATH/framework/crypto/src/port.h" to "$PROJECT_HEADER_FILES/framework/crypto/src/port.h"
file PORT_C "$HARMONY_VERSION_PATH/framework/crypto/src/port.c" to "$PROJECT_SOURCE_FILES/framework/crypto/src/port.c"

file SETTINGS_H "$HARMONY_VERSION_PATH/framework/crypto/src/settings.h" to "$PROJECT_HEADER_FILES/framework/crypto/src/settings.h"

file TYPES_H "$HARMONY_VERSION_PATH/framework/crypto/src/types.h" to "$PROJECT_HEADER_FILES/framework/crypto/src/types.h"

file VERSION_H "$HARMONY_VERSION_PATH/framework/crypto/src/version.h" to "$PROJECT_HEADER_FILES/framework/crypto/src/version.h"

file VISIBILITY_H "$HARMONY_VERSION_PATH/framework/crypto/src/visibility.h" to "$PROJECT_HEADER_FILES/framework/crypto/src/visibility.h"

endif

ifblock USE_CRYPTO_HW && (USE_CRYPTO_HASH || USE_CRYPTO_CIPHERS)
file CRYPTO_HW_H "$HARMONY_VERSION_PATH/framework/crypto/src/pic32mz-crypt.h" to "$PROJECT_HEADER_FILES/framework/crypto/pic32mz-crypt.h"
file CRYPTO_HW_C "$HARMONY_VERSION_PATH/framework/crypto/src/pic32mz-hash.c" to "$PROJECT_SOURCE_FILES/framework/crypto/pic32mz-hash.c"
